    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>biu3141Negotiator</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <outputDirectory>../bandana/agents</outputDirectory>
          <archive>
            <manifest>
              <mainClass>ddejonge.bandana.exampleAgents.Biu3141NegotiatorMain</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>bandana-framework</groupId>
      <artifactId>bandana</artifactId>
      <version>1.3.1</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/bandana-1.3.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>bot</groupId>
      <artifactId>bot</artifactId>
      <version>1.6</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/bot-1.6.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>commons</groupId>
      <artifactId>commons-net</artifactId>
      <version>3.3</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/commons-net-3.3.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>dip</groupId>
      <artifactId>dip</artifactId>
      <version>1.6</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/dip-1.6.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>jac</groupId>
      <artifactId>jac</artifactId>
      <version>0.8.1</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/jac-0.8.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>bandana</groupId>
      <artifactId>NegotiationServer</artifactId>
      <version>1.3.1</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/NegotiationServer-1.3.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>bandana</groupId>
      <artifactId>tcpIpComm</artifactId>
      <version>0.1.2</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/tcpIpComm-0.1.2.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>utilities</groupId>
      <artifactId>utilities</artifactId>
      <version>1.0.3</version>
      <scope>system</scope>
      <systemPath>${basedir}/../lib/utilities-1.0.3.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.7</maven.compiler.target>
  </properties>
</project>
